<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#ffffff"
    android:layout_height="fill_parent" >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >
        <include layout="@layout/include_navigation_bar" />
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/timewheellayout"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:background="#F0F0F0" >

                <com.androidex.appformwork.wheelview.WheelView
                    android:id="@+id/leftwheel"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"                  
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:tag="yearwheel" />
               
                <com.androidex.appformwork.wheelview.WheelView
                     android:id="@+id/rightwheel"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"                   
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:tag="hourtimewheel" />
               
               
            </LinearLayout>

            <LinearLayout
                android:id="@+id/clocksetingtemp4lay"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/timewheellayout"
                android:background="#c7c7c7"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:layout_below="@id/timewheellayout"
                android:layout_marginTop="-180dp"
                android:background="@drawable/dj_up" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@id/timewheellayout"
                android:layout_marginTop="-70dp"
                android:background="@drawable/wheel_line" >
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="85dp"
                >
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:text="时"
                   android:textSize="16sp"
                   android:textColor="@color/black"
                   android:paddingLeft="120dp"
                   /> 
                   <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:textSize="16sp"
                   android:textColor="@color/black"
                   android:text="分"
                   android:paddingRight="60dp"
                   />
            </RelativeLayout >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@id/timewheellayout"
                android:layout_marginTop="-100dp"
                android:background="@drawable/wheel_line" >
            </LinearLayout>
            
        </RelativeLayout> 
         <RelativeLayout
                android:id="@+id/alert_repeat_layout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:padding="10dp"
                >
                <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:text="重复"
                   android:textSize="16sp"
                   android:textColor="@color/black"
                   /> 
                   <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:textSize="16sp"
                   android:text="永不"
                   />
            </RelativeLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                />
             <RelativeLayout
                android:id="@+id/labelLayout" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:text="标签"
                   android:textSize="16sp"
                   android:textColor="@color/black"
                   /> 
                   <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:textSize="16sp"
                   android:text="皮肤测试"
                   />
            </RelativeLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                />
           <RelativeLayout
                android:id="@+id/RingLayout"  
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                >
                <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentLeft="true"
                   android:text="铃声"
                   android:textSize="16sp"
                   android:textColor="@color/black"
                   /> 
                   <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentRight="true"
                   android:textSize="16sp"
                   android:text="布谷鸟"
                   />
            </RelativeLayout>
            <View 
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"
                />     
    </LinearLayout>

</RelativeLayout>