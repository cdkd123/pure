<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aknow_of_water"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="top|center"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/onlysv"
        style="@style/m_w" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/twenty_dp"
            android:orientation="vertical" >

            <TextView
                style="@style/normalText" 
                android:text="春秋季面部 水分正常值" />

            <TextView
                style="@style/normalText" 
                android:text="夏季水分率比正常值相差 3%左右" />

            <TextView
                style="@style/normalText" 
                android:text="冬季水分率比正常值相差 5%左右" />
            
            
            <RelativeLayout 
                style="@style/m_w" >
                
                <ImageView
                   style="@style/w_w"
                   android:src="@drawable/face" 
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:contentDescription="@string/app_name"
                   android:layout_centerInParent="true"/>                
                
                <TextView
	                style="@style/normalText" 
	                android:layout_alignParentTop="true"
	                android:layout_alignParentLeft="true"
	                android:layout_marginTop="30dp"
	                android:gravity="center"
	                android:text="眼 部\n35%-45%" />

	            <TextView
	                style="@style/normalText" 
	                android:layout_alignParentTop="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginTop="30dp"
	                android:gravity="center"
	                android:text="脸 部\n32%-42%" />
	
	            <TextView
	                style="@style/normalText"
	                android:layout_alignParentBottom="true"
	                android:layout_alignParentLeft="true"
	                android:gravity="center"
	                android:paddingBottom="15dp"
	                android:text="手 部\n30%-38%" />
                
                <TextView
	                style="@style/normalText"
	               android:layout_alignParentBottom="true"
	                android:layout_alignParentRight="true"
	                android:gravity="center"
	                android:layout_marginRight="20dp"
	                android:text="颈 部\n35%-45%" />
                
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
        
        