<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_for_app"
    android:gravity="top|center"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlProgress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="43dp" >

        <com.mygame.pure.view.CircleProgressBar
             android:id="@+id/cpbUp"
             android:layout_centerHorizontal="true"
             android:layout_width="200dp"
             android:layout_height="200dp" />
        <TextView
            android:id="@+id/tvBlueProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="31.3%"
            android:textSize="60dp"
            android:textColor="@color/white"
             />
        <TextView
            android:id="@+id/tvBlueTouth"
            style="@style/styleNormalText"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:visibility="gone"
            android:text="蓝牙已连接" />
    </RelativeLayout>

    <TextView
        style="@style/styleNormalText"
        android:layout_marginTop="38dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:text="皮肤很湿润，向朋友嘚瑟一下吧~" />
    
    
    <RelativeLayout
        android:id="@+id/rlData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp" >

        <TextView
            android:id="@+id/tvAverageLabel"
            style="@style/styleNormalText"
            android:layout_marginLeft="@dimen/thirty_six_dp"
            android:text="平均水平" />
        
        <TextView
            android:id="@+id/tvAverage"
            style="@style/styleNormalText"
            android:layout_below="@+id/tvAverageLabel"
            android:textSize="25sp"
            android:layout_marginLeft="43dp"
            android:text="0.0" />
        
        <TextView
            android:id="@+id/tvYestodayLabel"
            style="@style/styleNormalText"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvAverageLabel"
            android:layout_marginRight="36dp"
            android:text="较前一天" />
        
        <TextView
            android:id="@+id/tvYestoday"
            style="@style/styleNormalText"
            android:layout_below="@+id/tvYestodayLabel"
            android:layout_alignParentRight="true"
            android:textSize="25sp"
            android:layout_marginRight="43dp"
            android:text="+0.0%" />
    </RelativeLayout>

</LinearLayout>